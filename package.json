{
  "name": "hovedopgave-2025",
  "version": "1.0.0",
  "description": "Node.js Express application with EJS and Tailwind CSS",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "npm run build:css && npx prisma generate",
    "build:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify",
    "watch:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:deploy": "npx prisma migrate deploy",
    "migrate": "node run-migrations.js"
  },
  "keywords": [
    "express",
    "ejs",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "resend": "^6.5.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.0"
  },
  "postinstall": "prisma generate"
}
