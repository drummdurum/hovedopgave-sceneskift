// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brugere {
  id         Int       @id @default(autoincrement())
  password   String
  navn       String
  teaternavn String
  lokation   String
  email      String    @unique
  features   Boolean   @default(false)
  godkendt   Boolean   @default(false)
  rolle      String    @default("bruger") // "bruger" eller "admin"

  produkter              Produkter[]
  forestillingsperioder  Forestillingsperioder[]
  reservationer          Reservationer[]
}

model Produkter {
  id               Int                  @id @default(autoincrement())
  navn             String
  beskrivelse      String
  billede_url      String?              // Beholdes for bagudkompatibilitet, kan fjernes senere
  skjult           Boolean              @default(false)
  renoveres        Boolean              @default(false)
  paa_sceneskift   Boolean              @default(false) // false = brugerens lager, true = Sceneskifts lager

  bruger_id        Int
  ejer             Brugere              @relation(fields: [bruger_id], references: [id])

  billeder                    ProduktBilleder[]
  kategorier                  ProduktKategorier[]
  reservationer               Reservationer[]
}

model ProduktBilleder {
  id          Int       @id @default(autoincrement())
  produkt_id  Int
  billede_url String
  position    Int       @default(0)  // Til at sortere billeder (0 = primært billede)
  created_at  DateTime  @default(now())

  produkt     Produkter @relation(fields: [produkt_id], references: [id], onDelete: Cascade)
}

model Kategorier {
  id        Int                 @id @default(autoincrement())
  navn      String              @unique
  produkter ProduktKategorier[]
}

model ProduktKategorier {
  produkt_id  Int
  kategori_id Int
  produkt     Produkter  @relation(fields: [produkt_id], references: [id], onDelete: Cascade)
  kategori    Kategorier @relation(fields: [kategori_id], references: [id], onDelete: Cascade)

  @@id([produkt_id, kategori_id])
}

model Forestillingsperioder {
  id           Int       @id @default(autoincrement())
  navn         String
  start_dato   DateTime
  slut_dato    DateTime
  created_by   Int?
  oprettet_af  Brugere?  @relation(fields: [created_by], references: [id])
}

model Reservationer {
  id         Int      @id @default(autoincrement())
  produkt_id Int
  laaner_id  Int
  bruger     String   // Navn på låner (beholdes for visning)
  teaternavn String   // Teater navn (beholdes for visning)
  fra_dato   DateTime
  til_dato   DateTime

  produkt    Produkter @relation(fields: [produkt_id], references: [id])
  laaner     Brugere   @relation(fields: [laaner_id], references: [id])
}

model PasswordReset {
  id         Int      @id @default(autoincrement())
  email      String
  token      String   @unique
  expires_at DateTime
  used       Boolean  @default(false)
  created_at DateTime @default(now())
}

