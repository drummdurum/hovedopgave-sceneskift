// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brugere {
  id         Int       @id @default(autoincrement())
  brugernavn String    @unique
  password   String
  navn       String
  teaternavn String
  lokation   String
  email      String    @unique
  features   Boolean   @default(false)
  godkendt   Boolean   @default(false)
  rolle      String    @default("bruger") // "bruger" eller "admin"

  produkter  Produkter[]
}

model Produkter {
  id               Int                  @id @default(autoincrement())
  navn             String
  beskrivelse      String
  billede_url      String
  skjult           Boolean              @default(false)
  renoveres        Boolean              @default(false)

  bruger_id        Int
  ejer             Brugere              @relation(fields: [bruger_id], references: [id])

  kategorier                  ProduktKategorier[]
  forestillingsperioder       ForestillingsperiodeProdukter[]
  reservationer               Reservationer[]
}

model Kategorier {
  id        Int                 @id @default(autoincrement())
  navn      String              @unique
  produkter ProduktKategorier[]
}

model ProduktKategorier {
  produkt_id  Int
  kategori_id Int
  produkt     Produkter  @relation(fields: [produkt_id], references: [id], onDelete: Cascade)
  kategori    Kategorier @relation(fields: [kategori_id], references: [id], onDelete: Cascade)

  @@id([produkt_id, kategori_id])
}

model Forestillingsperioder {
  id         Int       @id @default(autoincrement())
  navn       String
  start_dato DateTime
  slut_dato  DateTime

  produkter  ForestillingsperiodeProdukter[]
}

model ForestillingsperiodeProdukter {
  forestillingsperiode_id Int
  produkt_id              Int
  forestillingsperiode    Forestillingsperioder @relation(fields: [forestillingsperiode_id], references: [id], onDelete: Cascade)
  produkt                 Produkter             @relation(fields: [produkt_id], references: [id], onDelete: Cascade)

  @@id([forestillingsperiode_id, produkt_id])
}

model Reservationer {
  id         Int      @id @default(autoincrement())
  produkt_id Int
  bruger     String
  teaternavn String
  fra_dato   DateTime
  til_dato   DateTime

  produkt    Produkter @relation(fields: [produkt_id], references: [id])
}

