<div style="max-width: var(--max-width); margin: 0 auto; padding: 1rem 1.5rem; display: flex; justify-content: space-between; align-items: center; width: 100%;">
  <div>
    <a href="/" class="transition" style="display: block;">
      <img src="/compentens/image/logo rundt.png" alt="Logo" style="height: 60px; width: auto; transition: transform 0.3s ease;" onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">
    </a>
  </div>
  <nav class="space-x-6" style="font-family: var(--font-body); display: flex; align-items: center;">
    <!-- Shopping cart button -->
    <button onclick="openKurvModal()" class="btn-primary" style="position: relative; cursor: pointer;">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="color: var(--color-primary);">
        <path d="M9 2L7.17 6H2C1.45 6 1 6.45 1 7C1 7.09 1.01 7.18 1.04 7.27L3.58 14.54C3.81 15.24 4.48 15.72 5.25 15.72H17.75C18.52 15.72 19.19 15.24 19.42 14.54L21.96 7.27C21.99 7.18 22 7.09 22 7C22 6.45 21.55 6 21 6H15.83L14 2H9ZM10 4H13L14.5 7H8.5L10 4ZM9 10C9 10.5523 8.55228 11 8 11C7.44772 11 7 10.5523 7 10C7 9.44772 7.44772 9 8 9C8.55228 9 9 9.44772 9 10ZM17 10C17 10.5523 16.5523 11 16 11C15.4477 11 15 10.5523 15 10C15 9.44772 15.4477 9 16 9C16.5523 9 17 9.44772 17 10Z" fill="currentColor"/>
        <path d="M7 18C5.89543 18 5 18.8954 5 20C5 21.1046 5.89543 22 7 22C8.10457 22 9 21.1046 9 20C9 18.8954 8.10457 18 7 18Z" fill="currentColor"/>
        <path d="M17 18C15.8954 18 15 18.8954 15 20C15 21.1046 15.8954 22 17 22C18.1046 22 19 21.1046 19 20C19 18.8954 18.1046 18 17 18Z" fill="currentColor"/>
      </svg>
      <span id="kurvBadge" class="hidden" style="position: absolute; top: -8px; right: -8px; background-color: #dc2626; color: white; font-size: 11px; font-weight: bold; padding: 2px 6px; border-radius: 10px; min-width: 18px; text-align: center;">0</span>
    </button>
    <!-- Profile button -->
    <a href="/profile" class="btn-primary" >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="color: var(--color-primary);">
        <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" fill="currentColor"/>
        <path d="M12 14C6.47715 14 2 16.4772 2 19.5V22H22V19.5C22 16.4772 17.5228 14 12 14Z" fill="currentColor"/>
      </svg>
    </a>
    <!-- User menu -->
    <div class="user-menu" style="position: relative; display: inline-block;">
      <button type="button" class="user-btn btn-primary" aria-haspopup="true" aria-expanded="false" title="Menu" style="display: inline-flex; align-items: center; gap: 8px;">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <rect x="3" y="6" width="18" height="2" fill="currentColor" />
          <rect x="3" y="11" width="18" height="2" fill="currentColor" />
          <rect x="3" y="16" width="18" height="2" fill="currentColor" />
        </svg>
      </button>
      <div class="user-dropdown" role="menu" aria-hidden="true" style="position: absolute; right: 0; top: calc(100% + 10px); min-width: 220px; background: #fff; border-radius: 12px; box-shadow: 0 10px 25px rgba(0,0,0,0.15); padding: 8px; display: none; z-index: 1000;">
        <a href="/profile" class="dropdown-item" style="display:block; padding: 12px 14px; border-radius: 8px; color: var(--color-dark); text-decoration: none;">Profil</a>
        <a href="/forestillingsperioder" class="dropdown-item" style="display:block; padding: 12px 14px; border-radius: 8px; color: var(--color-dark); text-decoration: none;">Forestillingsperioder</a>
        <a href="/about" class="dropdown-item" style="display:block; padding: 12px 14px; border-radius: 8px; color: var(--color-dark); text-decoration: none;">Om os</a>
        <a href="/rekvisitter" class="dropdown-item" style="display:block; padding: 12px 14px; border-radius: 8px; color: var(--color-dark); text-decoration: none;">Rekvisitter</a>
        <hr style="margin: 8px 0; border: none; border-top: 1px solid #e5e7eb;">
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/auth/logout" class="dropdown-item" style="display:block; padding: 12px 14px; border-radius: 8px; color: #dc2626; text-decoration: none; font-weight: 600;">Log ud</a>
        <% } else { %>
          <a href="/login" class="dropdown-item" style="display:block; padding: 12px 14px; border-radius: 8px; color: var(--color-primary); text-decoration: none; font-weight: 600;">Log ind</a>
        <% } %>
      </div>
    </div>
  </nav>
</div>

<script src="/compentens/js/dropdownHeader.js"></script>
 
